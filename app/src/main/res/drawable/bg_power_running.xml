<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- soft glow -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="90dp"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#3300E5A8"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- outer ring -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#00000000" />
            <stroke android:width="5dp" android:color="#7FF5DC" />
        </shape>
    </item>
    <!-- inner ring -->
    <item android:left="16dp" android:top="16dp" android:right="16dp" android:bottom="16dp">
        <shape android:shape="oval">
            <solid android:color="#00000000" />
            <stroke android:width="2dp" android:color="#35EBCF" />
        </shape>
    </item>

    <!-- inner fill -->
    <item android:left="26dp" android:top="26dp" android:right="26dp" android:bottom="26dp">
        <shape android:shape="oval">
            <solid android:color="#0B1115" />
        </shape>
    </item>
</layer-list>
