<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Per-corner rounding for the right-side icon buttons so the stack forms a single rounded pill. -->
    <style name="ShapeAppearanceOverlay.MCAW.RightButtonTop" parent="ShapeAppearanceOverlay.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MCAW.RightButtonBottom" parent="ShapeAppearanceOverlay.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

</resources>

