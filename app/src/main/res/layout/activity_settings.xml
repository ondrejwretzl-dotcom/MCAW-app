<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F1115">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nastavení"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <!-- Top actions -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:orientation="vertical">

                
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/mcaw_logo"
                android:contentDescription="MCAW logo"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nastavení"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />
        </LinearLayout>
<TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rychlá nápověda"
                    android:textColor="#111827"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Návod k nastavení + limity aplikace."
                    android:textColor="#475569"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOpenHelp"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="Návod"
                        android:textAllCaps="false"
                        app:cornerRadius="14dp"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOpenLegal"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="Upozornění a podmínky"
                        android:maxLines="1"
                        android:ellipsize="end"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeStepGranularity="1sp"
                        android:textAllCaps="false"
                        app:cornerRadius="14dp" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnResetRecommended"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="10dp"
                    android:text="Reset na doporučené"
                    android:textAllCaps="false"
                    app:cornerRadius="14dp"
                    app:icon="@android:drawable/ic_menu_revert"
                    app:iconPadding="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Detekce -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:orientation="vertical">

                
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/mcaw_logo"
                android:contentDescription="MCAW logo"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nastavení"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />
        </LinearLayout>
<TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detekce"
                    android:textColor="#111827"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Režim ovlivňuje prahy varování. Model ovlivňuje přesnost/výkon."
                    android:textColor="#475569"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp" />

                <LinearLayout
                    android:id="@+id/groupMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detekční režim"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:textColor="#0F172A" />

                <Spinner
                    android:id="@+id/spMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/modes" />

                <TextView
                    android:id="@+id/txtModeDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Režim: Město"
                    android:textColor="#475569"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/groupModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Výběr modelu"
                    android:textStyle="bold"
                    android:layout_marginTop="14dp"
                    android:textColor="#0F172A" />

                <Spinner
                    android:id="@+id/spModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/models" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- Varování -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:orientation="vertical">

                
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/mcaw_logo"
                android:contentDescription="MCAW logo"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nastavení"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />
        </LinearLayout>
<TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Varování"
                    android:textColor="#111827"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nastavení zvuku/hlasu zvlášť pro oranžovou a červenou."
                    android:textColor="#475569"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/swVibration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vibrace" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#E5E7EB" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rozdělení alertů (oranžová / červená)"
                    android:textColor="#0F172A"
                    android:textStyle="bold" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/swSoundOrange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zvuk pro oranžovou" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/swSoundRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zvuk pro červenou" />

                <!-- Hlasitost alertů (škálování MediaPlayeru) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hlasitost zvuku"
                    android:textColor="#0F172A"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Oranžová (warning)"
                    android:textColor="#475569"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtOrangeVolumeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Velmi silná"
                        android:textColor="#475569"
                        android:layout_marginEnd="10dp" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderOrangeVolume"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:labelBehavior="gone" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Červená (critical)"
                    android:textColor="#475569"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtRedVolumeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Max"
                        android:textColor="#475569"
                        android:layout_marginEnd="10dp" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderRedVolume"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:labelBehavior="gone" />
                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/swVoiceOrange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hlas pro oranžovou" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/swVoiceRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hlas pro červenou" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Text TTS (oranžová / červená)"
                    android:textColor="#475569"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/etTtsOrange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="TTS pro oranžovou" />

                <EditText
                    android:id="@+id/etTtsRed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="TTS pro červenou" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Bezpečnost / Pokročilé -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:orientation="vertical">

                
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/mcaw_logo"
                android:contentDescription="MCAW logo"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nastavení"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />
        </LinearLayout>
<TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pokročilé"
                    android:textColor="#111827"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Distance scale slider -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kalibrace vzdálenosti"
                    android:textColor="#0F172A"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />

                >

<!-- Camera calibration: height + pitch -->
>

>


                <LinearLayout
    android:id="@+id/groupCalibration"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalibrace kamery"
        android:textStyle="bold"
        android:textColor="#E5E7EB"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp" />

    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/txtDistanceScaleValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OK"
                            android:textColor="#475569"
                            android:layout_marginEnd="10dp" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderDistanceScale"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            app:labelBehavior="gone" />

                        <ImageButton
                            android:id="@+id/btnInfoDistanceScale"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="Info"
                            android:src="@android:drawable/ic_menu_info_details" />
                    </LinearLayout

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Výška kamery (m)"
            android:textColor="#E5E7EB" />

        <EditText
            android:id="@+id/etCameraMountHeight"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="1.20" />

        <ImageButton
            android:id="@+id/btnInfoCameraMountHeight"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="Info"
            android:src="@android:drawable/ic_menu_info_details" />
    </LinearLayout

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Sklon kamery dolů (°)"
            android:textColor="#E5E7EB" />

        <EditText
            android:id="@+id/etCameraPitchDownDeg"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:hint="6" />

        <ImageButton
            android:id="@+id/btnInfoCameraPitchDownDeg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="Info"
            android:src="@android:drawable/ic_menu_info_details" />
    </LinearLayout

</LinearLayout>

<LinearLayout
                    android:id="@+id/groupDebugOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <!-- Lane filter row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/swLaneFilter"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Omezit detekci na jízdní dráhu" />

                    <ImageButton
                        android:id="@+id/btnInfoLaneFilter"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="Info"
                        android:src="@android:drawable/ic_menu_info_details" />
                </LinearLayout>

                <!-- Lane width slider -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Šířka pruhu (tolerance do stran)"
                    android:textColor="#0F172A"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtLaneWidthValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Střední"
                        android:textColor="#475569"
                        android:layout_marginEnd="10dp" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderLaneWidth"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:labelBehavior="gone" />

                    <ImageButton
                        android:id="@+id/btnInfoLaneWidth"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="Info"
                        android:src="@android:drawable/ic_menu_info_details" />
                </LinearLayout>

<!-- Quality gating -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/swQualityGating"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Omezit falešné alarmy v noci/rozmazání" />

                    <ImageButton
                        android:id="@+id/btnInfoQualityGating"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="Info"
                        android:src="@android:drawable/ic_menu_info_details" />
                </LinearLayout>

                <!-- Cut-in -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/swCutInProtection"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Ochrana proti cut‑in" />

                    <ImageButton
                        android:id="@+id/btnInfoCutIn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="Info"
                        android:src="@android:drawable/ic_menu_info_details" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#E5E7EB" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/swRoiStrictContainment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Přísné držení v ROI" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/swBrakeCue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detekce brzdových světel (beta)" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Citlivost brzdových světel"
                    android:textColor="#475569" />

                <Spinner
                    android:id="@+id/spBrakeCueSensitivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                </LinearLayout>


                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/swDebugOverlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Debug overlay" />

<com.google.android.material.switchmaterial.SwitchMaterial
    android:id="@+id/swDebugSettings"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Debug nastavení" />



            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

    </LinearLayout>
</ScrollView>
