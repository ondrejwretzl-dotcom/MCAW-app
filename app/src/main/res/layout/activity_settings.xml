<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Detekční režim -->
        <TextView
            android:text="Detekční režim"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/modes" />

        <!-- Výběr modelu -->
        <TextView
            android:text="Výběr modelu"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/models" />

        <!-- Uživatelské prahy -->
        <TextView
            android:id="@+id/txtUserThresholds"
            android:text="Uživatelské prahy (TTC / vzdálenost / rychlost)"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/groupUserThresholds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="TTC (s) – oranžová / červená" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/etTtcOrange"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
                <EditText
                    android:id="@+id/etTtcRed"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:text="Vzdálenost (m) – oranžová / červená" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/etDistOrange"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
                <EditText
                    android:id="@+id/etDistRed"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:text="Rychlost přiblížení (m/s) – oranžová / červená" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/etSpeedOrange"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
                <EditText
                    android:id="@+id/etSpeedRed"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
            </LinearLayout>
        </LinearLayout>

        <!-- Upozornění -->
        <TextView
            android:text="Upozornění"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp" />

        <Switch
            android:id="@+id/swSound"
            android:text="Zvuk" />

        <Switch
            android:id="@+id/swVibration"
            android:text="Vibrace" />

        <Switch
            android:id="@+id/swVoice"
            android:text="Hlasové varování" />

        <Switch
            android:id="@+id/swDebug"
            android:text="Debug overlay" />

    </LinearLayout>
</ScrollView>
