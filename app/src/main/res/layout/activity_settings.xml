<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Detekční režim -->
        <TextView
            android:text="Detekční režim"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/modes" />

        <TextView
            android:id="@+id/txtModeDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Režim: Město"
            android:textColor="#475569"
            android:textSize="13sp"
            android:layout_marginTop="6dp" />

        <!-- Výběr modelu -->
        <TextView
            android:text="Výběr modelu"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/models" />

        <!-- Uživatelské prahy -->
        <TextView
            android:id="@+id/txtUserThresholds"
            android:text="Uživatelské prahy (TTC / vzdálenost / rychlost)"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/groupUserThresholds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="TTC (s) – oranžová / červená"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/etTtcOrange"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
                <EditText
                    android:id="@+id/etTtcRed"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:text="Vzdálenost (m) – oranžová / červená"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/etDistOrange"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
                <EditText
                    android:id="@+id/etDistRed"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:text="Rychlost přiblížení (m/s) – oranžová / červená"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/etSpeedOrange"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
                <EditText
                    android:id="@+id/etSpeedRed"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
            </LinearLayout>
        </LinearLayout>

        <!-- Upozornění -->
        <TextView
            android:text="Upozornění"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zvuk" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swVibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vibrace" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swVoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hlasové varování" />


<!-- Rozdělení alertů (ORANGE / RED) -->
<TextView
    android:layout_marginTop="14dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Rozdělení alertů (oranžová / červená)"
    android:textStyle="bold" />

<com.google.android.material.switchmaterial.SwitchMaterial
    android:id="@+id/swSoundOrange"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Zvuk pro oranžovou" />

<com.google.android.material.switchmaterial.SwitchMaterial
    android:id="@+id/swSoundRed"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Zvuk pro červenou" />

<com.google.android.material.switchmaterial.SwitchMaterial
    android:id="@+id/swVoiceOrange"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hlas pro oranžovou" />

<com.google.android.material.switchmaterial.SwitchMaterial
    android:id="@+id/swVoiceRed"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hlas pro červenou" />

<TextView
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Text TTS (oranžová / červená)"
    android:textColor="#475569"
    android:textSize="13sp" />

<EditText
    android:id="@+id/etTtsOrange"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="text"
    android:hint="TTS pro oranžovou" />

<EditText
    android:id="@+id/etTtsRed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="text"
    android:hint="TTS pro červenou" />



        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swDebug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debug overlay" />

        <!-- Pokročilé -->
        <TextView
            android:text="Pokročilé"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swLaneFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filtrovat objekty v jízdním pruhu" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swBrakeCue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detekce brzdových světel (beta)" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Citlivost brzdových světel"
            android:textColor="#B8BDC7" />

        <Spinner
            android:id="@+id/spBrakeCueSensitivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
