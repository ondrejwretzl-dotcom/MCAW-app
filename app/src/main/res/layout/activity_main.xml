<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_screen"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="12dp"
    android:paddingRight="16dp"
    android:paddingBottom="12dp">

    <!-- Top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="MCAW logo"
            android:scaleType="fitCenter"
            android:src="@drawable/mcaw_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="MCAW"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Running indicator (subtle) -->
        <TextView
            android:id="@+id/txtAlive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:alpha="0.9"
            android:text="▶"
            android:textColor="#3BA6FF"
            android:textSize="14sp"
            android:visibility="gone" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtBuildInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Build: -"
                android:textColor="#9CA3AF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtProfileInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="end"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Profil: Default"
                android:textColor="#9CA3AF"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Dominant alert banner -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/panelAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="26dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/txtAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_alert_banner"
            android:gravity="center"
            android:paddingTop="30dp"
            android:paddingBottom="25dp"
            android:text="SAFE"
            android:textColor="#A7F3DD"
            android:textSize="56sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Metrics panel: 3x2 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/panelMetrics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_panel_glass"
            android:orientation="vertical"
            android:padding="8dp">

            <GridLayout
                android:id="@+id/gridMetrics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <!-- 1) TTC -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@drawable/bg_metric_tile"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="TTC"
                        android:textColor="#9CA3AF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtTtc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="44sp"
                        android:autoSizeMinTextSize="20sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="--.-"
                        android:textColor="#F9FAFB"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtTtcUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="s"
                        android:textColor="#CBD5E1"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 2) Distance -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@drawable/bg_metric_tile"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="VZDÁL"
                        android:textColor="#9CA3AF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDistance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="38sp"
                        android:autoSizeMinTextSize="18sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="--.-"
                        android:textColor="#F9FAFB"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDistanceUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="m"
                        android:textColor="#CBD5E1"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

				<!-- 6) Detected object -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@drawable/bg_metric_tile"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="OBJEKT"
                        android:textColor="#9CA3AF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDetectedObject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="28sp"
                        android:autoSizeMinTextSize="16sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="--"
                        android:textColor="#F9FAFB"
                        android:textStyle="bold" />
                </LinearLayout>

               
                <!-- 4) Relative speed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@drawable/bg_metric_tile"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="REL"
                        android:textColor="#9CA3AF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="38sp"
                        android:autoSizeMinTextSize="18sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="--.-"
                        android:textColor="#F9FAFB"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtSpeedUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="km/h"
                        android:textColor="#CBD5E1"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 5) Object speed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@drawable/bg_metric_tile"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="OBJ"
                        android:textColor="#9CA3AF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtObjectSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="38sp"
                        android:autoSizeMinTextSize="18sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="--.-"
                        android:textColor="#F9FAFB"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtObjectSpeedUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="km/h"
                        android:textColor="#CBD5E1"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
				
				 <!-- 3) Rider speed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@drawable/bg_metric_tile"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Moje"
                        android:textColor="#9CA3AF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtRiderSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="38sp"
                        android:autoSizeMinTextSize="18sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="--.-"
                        android:textColor="#F9FAFB"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtRiderSpeedUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="km/h"
                        android:textColor="#CBD5E1"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </GridLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

	<!-- Status line (brake cue + service + Profile + WHY) -->
	<com.google.android.material.card.MaterialCardView
	    android:id="@+id/panelStatusLine"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="2dp"
	    app:cardCornerRadius="22dp"
	    app:cardElevation="1dp"
	    app:cardUseCompatPadding="true">
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/bg_panel_glass"
	        android:orientation="vertical"
	        android:paddingLeft="14dp"
	        android:paddingTop="6dp"
	        android:paddingRight="14dp"
	        android:paddingBottom="6dp">
	
	        <!-- ROW 1: brake | service -->
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical"
	            android:orientation="horizontal">
	
	            <!-- COL 1 -->
	            <LinearLayout
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center_vertical"
	                android:orientation="horizontal">
	
	                <TextView
	                    android:id="@+id/brakeLamp"
	                    android:layout_width="12dp"
	                    android:layout_height="12dp"
	                    android:background="#3A3F4A"
	                    android:importantForAccessibility="no" />
	
	                <TextView
	                    android:id="@+id/txtBrakeLamp"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginStart="6dp"
	                    android:text="NEBRZDÍ"
	                    android:textColor="#FFFFFF"
	                    android:textSize="9sp"
	                    android:textStyle="bold" />
	            </LinearLayout>
	
	            <!-- COL 2 -->
	            <LinearLayout
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:layout_marginStart="12dp"
	                android:gravity="center_vertical"
	                android:orientation="horizontal">
	
	                <View
	                    android:id="@+id/dotService"
	                    android:layout_width="8dp"
	                    android:layout_height="8dp"
	                    android:background="@android:color/darker_gray"
	                    android:importantForAccessibility="no" />
	
	                <TextView
	                    android:id="@+id/txtStatus"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginStart="6dp"
	                    android:text="STOP"
	                    android:textColor="#C9D1D9"
	                    android:textSize="9sp"
	                    android:textStyle="bold" />
	            </LinearLayout>
	
	        </LinearLayout>
	
	        <!-- ROW 2: profile | why -->
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="4dp"
	            android:gravity="center_vertical"
	            android:orientation="horizontal">
	
	            <com.google.android.material.button.MaterialButton
	                android:id="@+id/btnProfileInline"
	                android:layout_width="wrap_content"
	                android:layout_height="26dp"
	                android:insetLeft="0dp"
	                android:insetRight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
	                android:minWidth="0dp"
	                android:paddingLeft="10dp"
	                android:paddingRight="10dp"
	                android:text="Profil: Default ▾"
	                android:textAllCaps="false"
	                android:textColor="#E5E7EB"
	                android:textSize="11sp"
	                app:backgroundTint="#1E222A"
	                app:cornerRadius="14dp"
	                app:strokeColor="#2F3742"
	                app:strokeWidth="1dp" />
	
	            <TextView
	                android:id="@+id/txtWhy"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_marginStart="10dp"
	                android:layout_weight="1"
	                android:ellipsize="end"
	                android:maxLines="1"
	                android:text=""
	                android:textColor="#AAB4BE"
	                android:textSize="11sp" />
	
	        </LinearLayout>
	
	    </LinearLayout>
	
	</com.google.android.material.card.MaterialCardView>

<!-- Controls: preview + START + camera/settings -->
<com.google.android.material.card.MaterialCardView
    android:id="@+id/panelControls"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="22dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_panel_glass"
        android:padding="14dp">

        <!-- LEFT: preview -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/panelMiniPreview"
            android:layout_width="112dp"
            android:layout_height="112dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0B1115">

                <androidx.camera.view.PreviewView
                    android:id="@+id/previewThumb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_preview_tag"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="PREVIEW"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- CENTER: START (overlaps both sides) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPower"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:contentDescription="Start / Stop"
            android:text="START"
            android:textAllCaps="false"
            android:textColor="#E5E7EB"
            android:textSize="16sp"
            android:textStyle="bold"
            android:elevation="8dp"
            android:layout_marginStart="-18dp"
            android:layout_marginEnd="-18dp"
            app:backgroundTint="#2B313A"
            app:strokeWidth="3dp"
            app:strokeColor="#64748B"
            app:cornerRadius="56dp"
            app:icon="@drawable/ic_power"
            app:iconGravity="textTop"
            app:iconPadding="6dp"
            app:iconTint="#E5E7EB"
            app:iconSize="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/panelMiniPreview"
            app:layout_constraintEnd_toStartOf="@id/panelRightButtons" />

        <!-- RIGHT: camera/settings (same footprint as preview, and overlaps START) -->
        <LinearLayout
            android:id="@+id/panelRightButtons"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:orientation="vertical"
            android:layout_marginStart="-18dp"
            app:layout_constraintStart_toEndOf="@id/btnPower"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnPower"
            app:layout_constraintBottom_toBottomOf="@id/btnPower">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCamera"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:contentDescription="Kamera"
                android:text=""
                android:padding="0dp"
                android:gravity="center"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:elevation="4dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MCAW.RightButtonTop"
                app:icon="@drawable/ic_camera"
                app:iconGravity="textTop"
                app:iconPadding="0dp"
                app:iconTint="#C9D1D9"
                app:iconSize="26dp"
                app:strokeWidth="1dp"
                app:strokeColor="#2F3742"
                app:backgroundTint="#1E222A" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSettings"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:contentDescription="Nastavení"
                android:text=""
                android:padding="0dp"
                android:gravity="center"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:elevation="4dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MCAW.RightButtonBottom"
                app:icon="@drawable/ic_settings"
                app:iconGravity="textTop"
                app:iconPadding="0dp"
                app:iconTint="#C9D1D9"
                app:iconSize="26dp"
                app:strokeWidth="1dp"
                app:strokeColor="#2F3742"
                app:backgroundTint="#1E222A" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

    <!-- Activities are opened on demand (popup), to keep main screen compact -->

    <!-- Bottom bar: Help + Kalibrace + Aktivity+ Legal -->
        <LinearLayout
        android:id="@+id/panelBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHelp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:text="NÁVOD"
            android:textAllCaps="false"
            android:textColor="#E5E7EB"
            android:textSize="13sp"
            app:backgroundTint="#1E222A"
            app:cornerRadius="14dp"
            app:icon="@android:drawable/ic_menu_help"
            app:iconPadding="6dp"
            app:iconTint="#E5E7EB"
            app:iconSize="18dp" />
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLegal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:text="Kalibrace"
            android:textAllCaps="false"
            android:textColor="#E5E7EB"
            android:textSize="13sp"
            app:backgroundTint="#1E222A"
            app:cornerRadius="14dp"
            app:icon="@android:drawable/ic_menu_info_details"
            app:iconPadding="6dp"
            app:iconTint="#E5E7EB"
            app:iconSize="18dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnActivities"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:text="AKTIVITY"
            android:textAllCaps="false"
            android:textColor="#E5E7EB"
            android:textSize="13sp"
            app:backgroundTint="#1E222A"
            app:cornerRadius="14dp"
            app:icon="@android:drawable/ic_menu_recent_history"
            app:iconPadding="6dp"
            app:iconTint="#E5E7EB"
            app:iconSize="18dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLegal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:text="LEGAL"
            android:textAllCaps="false"
            android:textColor="#E5E7EB"
            android:textSize="13sp"
            app:backgroundTint="#1E222A"
            app:cornerRadius="14dp"
            app:icon="@android:drawable/ic_menu_info_details"
            app:iconPadding="6dp"
            app:iconTint="#E5E7EB"
            app:iconSize="18dp" />

    </LinearLayout>

</LinearLayout>
