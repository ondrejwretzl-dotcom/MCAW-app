<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F1115"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Top bar (full screen UI, bez ScrollView) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/mcaw_logo"
            android:contentDescription="MCAW logo"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MCAW"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp" />

        <!-- SAFE "alive" indikace – jemná, bez blikání (zatím čistě vizuální; logiku necháváme beze změn) -->
        <ProgressBar
            android:id="@+id/progressAlive"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="10dp"
            android:indeterminate="true" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtBuildInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Build: -"
            android:textColor="#6B7280"
            android:textSize="12sp"
            android:gravity="end" />

    </LinearLayout>

    <!-- Stav služby (zachovat id + vizuální update v kódu) -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="18dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp">

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Služba: ZASTAVENA"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="14dp"
            android:background="#1E222A" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Panel s metrikami: 2x3 boxy, větší čísla, klidné (bez zásahu do logiky/TTS) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/panelMetrics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="18dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#171A1F">

            <GridLayout
                android:id="@+id/gridMetrics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:useDefaultMargins="true">

                <!-- 1) TTC -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="#1E222A"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtTtc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TTC: --.- s"
                        android:textColor="#00E5A8"
                        android:textStyle="bold"
                        android:textSize="34sp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:ellipsize="end" />
                </LinearLayout>

                <!-- 2) Distance -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="#1E222A"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtDistance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vzdálenost: --.- m"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:ellipsize="end" />
                </LinearLayout>

                <!-- 3) Rider speed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="#1E222A"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtRiderSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rychlost jezdce: 0.0 km/h"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:ellipsize="end" />
                </LinearLayout>

                <!-- 4) Relative speed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="#1E222A"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rychlost přiblížení: --.- km/h"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:ellipsize="end" />
                </LinearLayout>

                <!-- 5) Object speed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="#1E222A"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtObjectSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rychlost objektu: --.- km/h"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:ellipsize="end" />
                </LinearLayout>

                <!-- 6) Detected object -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="#1E222A"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtDetectedObject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detekovaný objekt: --"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:ellipsize="end" />
                </LinearLayout>

            </GridLayout>

            <!-- Brake cue + WHY (WHY jen při alertu, řídí kód) -->
            <LinearLayout
                android:id="@+id/panelBrakeLamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/brakeLamp"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="#3A3F4A" />

                <TextView
                    android:id="@+id/txtBrakeLamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BRZDA"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

                <TextView
                    android:id="@+id/txtWhy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#AAB4BE"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginStart="10dp" />

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Ovládání -->
    <LinearLayout
        android:id="@+id/panelControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStart"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Start"
            android:textAllCaps="false"
            app:cornerRadius="16dp"
            android:layout_marginEnd="6dp"
            app:backgroundTint="#00E5A8" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStop"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Stop"
            android:textAllCaps="false"
            app:cornerRadius="16dp"
            android:layout_marginStart="6dp"
            app:backgroundTint="#FF3B30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettings"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Nastavení"
            android:textAllCaps="false"
            app:cornerRadius="16dp"
            app:icon="@android:drawable/ic_menu_preferences"
            app:iconPadding="8dp"
            android:layout_marginEnd="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCamera"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Kamera"
            android:textAllCaps="false"
            app:cornerRadius="16dp"
            app:icon="@android:drawable/ic_menu_camera"
            app:iconPadding="8dp"
            android:layout_marginStart="6dp"
            app:backgroundTint="#0A84FF" />
    </LinearLayout>

    <!-- Activity log držíme (debug/ladění). Dostane zbytek obrazovky. -->
    <TextView
        android:id="@+id/txtActivityLog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Aktivity:\n- Aplikace spuštěna"
        android:textColor="#C9D1D9"
        android:textSize="13sp"
        android:background="#14181E"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:overScrollMode="always" />

</LinearLayout>
