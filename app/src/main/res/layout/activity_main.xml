<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_screen"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="12dp"
    android:paddingRight="16dp"
    android:paddingBottom="12dp">

    <!-- Top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="MCAW logo"
            android:scaleType="fitCenter"
            android:src="@drawable/mcaw_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="MCAW"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Running indicator (subtle) -->
        <TextView
            android:id="@+id/txtAlive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:alpha="0.9"
            android:text="▶"
            android:textColor="#3BA6FF"
            android:textSize="14sp"
            android:visibility="gone" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtBuildInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Build: -"
                android:textColor="#9CA3AF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtProfileInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="end"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Profil: Default ▾"
                android:textColor="#9CA3AF"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- Dominant alert banner -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/panelAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="26dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/txtAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_alert_banner"
            android:gravity="center"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:text="SAFE"
            android:textColor="#A7F3DD"
            android:textSize="56sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Metrics panel: 3x2 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/panelMetrics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_panel_glass"
            android:orientation="vertical"
            android:padding="12dp">

            <GridLayout
                android:id="@+id/gridMetrics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <!-- 1) TTC -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@drawable/bg_metric_tile"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="TTC"
                        android:textColor="#9CA3AF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtTtc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="40sp"
                        android:autoSizeMinTextSize="22sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="--.- s"
                        android:textColor="#C9D1D9"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 2) Distance -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@drawable/bg_metric_tile"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="VZDÁL"
                        android:textColor="#9CA3AF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDistance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="34sp"
                        android:autoSizeMinTextSize="20sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="--.- m"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 3) Rider speed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@drawable/bg_metric_tile"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="TY"
                        android:textColor="#9CA3AF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtRiderSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="34sp"
                        android:autoSizeMinTextSize="20sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="0.0 km/h"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 4) Relative speed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@drawable/bg_metric_tile"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="REL"
                        android:textColor="#9CA3AF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="34sp"
                        android:autoSizeMinTextSize="20sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="--.- km/h"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 5) Object speed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@drawable/bg_metric_tile"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="OBJ"
                        android:textColor="#9CA3AF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtObjectSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="34sp"
                        android:autoSizeMinTextSize="20sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="--.- km/h"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 6) Detected object -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@drawable/bg_metric_tile"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="OBJEKT"
                        android:textColor="#9CA3AF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDetectedObject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="28sp"
                        android:autoSizeMinTextSize="16sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="--"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />
                </LinearLayout>

            </GridLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Status line (brake cue + service) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/panelStatusLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_panel_glass"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingTop="10dp"
            android:paddingRight="14dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/brakeLamp"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="#3A3F4A" />

            <TextView
                android:id="@+id/txtBrakeLamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="NEBRZDÍ"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="16dp"
                android:layout_height="1dp" />

            <View
                android:id="@+id/dotService"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZASTAVENA"
                android:textColor="#C9D1D9"
                android:textSize="14sp"
                android:textStyle="bold" />

<com.google.android.material.button.MaterialButton
    android:id="@+id/btnProfileInline"
    android:layout_width="wrap_content"
    android:layout_height="32dp"
    android:layout_marginStart="10dp"
    android:minWidth="0dp"
    android:text=""
    android:textAllCaps="false"
    android:textColor="#E5E7EB"
    android:textSize="12sp"
                    app:backgroundTint="#1E222A"
    app:cornerRadius="16dp"
    app:strokeWidth="1dp"
    app:strokeColor="#2F3742" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnActivities"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:text="AKTIVITY"
            android:textAllCaps="false"
            android:textColor="#E5E7EB"
            android:textSize="13sp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeMaxTextSize="13sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:backgroundTint="#1E222A"
            app:cornerRadius="14dp"
            app:insetLeft="0dp"
            app:insetRight="0dp"
            app:insetTop="0dp"
            app:insetBottom="0dp"
            app:icon="@android:drawable/ic_menu_recent_history"
            app:iconPadding="4dp"
            app:iconTint="#E5E7EB"
            app:iconSize="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLegal"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:text="LEGAL"
            android:textAllCaps="false"
            android:textColor="#E5E7EB"
            android:textSize="13sp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeMaxTextSize="13sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:backgroundTint="#1E222A"
            app:cornerRadius="14dp"
            app:insetLeft="0dp"
            app:insetRight="0dp"
            app:insetTop="0dp"
            app:insetBottom="0dp"
            app:icon="@android:drawable/ic_menu_info_details"
            app:iconPadding="4dp"
            app:iconTint="#E5E7EB"
            app:iconSize="16dp" />

    </LinearLayout>

</LinearLayout>
