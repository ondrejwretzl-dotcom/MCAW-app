<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F1115">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/mcaw_logo"
                android:contentDescription="MCAW logo"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MCAW"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />
        </LinearLayout>


        <!-- Stav služby -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp">

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Služba: ZASTAVENA"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:padding="14dp"
                android:background="#1E222A" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Panel s metrikami -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/panelMetrics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:background="#171A1F">

                <TextView
                    android:id="@+id/txtTtc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TTC: --.- s"
                    android:textColor="#00E5A8"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/txtDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vzdálenost: --.- m"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txtRiderSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rychlost jezdce: 0.0 km/h"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txtSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rychlost přiblížení: --.- m/s"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txtObjectSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rychlost objektu: --.- m/s"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txtDetectedObject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detekovaný objekt: --"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:gravity="center" />

                <!-- Semafor brzdových světel -->
                <LinearLayout
                    android:id="@+id/panelBrakeLamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/brakeLamp"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="#3A3F4A" />

                    <TextView
                        android:id="@+id/txtBrakeLamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BRZDA"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp" />
                
                    <TextView
                        android:id="@+id/txtWhy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="#AAB4BE"
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginStart="10dp" />
</LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Ovládání -->
        <LinearLayout
            android:id="@+id/panelControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStart"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:text="Start"
                android:textAllCaps="false"
                app:cornerRadius="14dp"
                android:layout_marginEnd="6dp" 
                app:backgroundTint="#00E5A8"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStop"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:text="Stop"
                android:textAllCaps="false"
                app:cornerRadius="14dp"
                android:layout_marginStart="6dp" 
                app:backgroundTint="#FF3B30"
                />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="Nastavení"
            android:textAllCaps="false"
            app:cornerRadius="14dp"
            app:icon="@android:drawable/ic_menu_preferences"
            app:iconPadding="8dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCamera"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="Kamera"
            android:textAllCaps="false"
            app:cornerRadius="14dp"
            app:icon="@android:drawable/ic_menu_camera"
            app:iconPadding="8dp"
            android:layout_marginBottom="8dp" 
                app:backgroundTint="#0A84FF"
                />

        <TextView
            android:id="@+id/txtActivityLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aktivity:\n- Aplikace spuštěna"
            android:textColor="#C9D1D9"
            android:textSize="14sp"
            android:background="#14181E"
            android:padding="10dp"
            android:layout_marginBottom="8dp" 
            android:scrollbars="vertical"
            
            android:fadeScrollbars="false"
            
            android:overScrollMode="always"
            />

        <TextView
            android:id="@+id/txtBuildInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Build: -"
            android:textColor="#6B7280"
            android:textSize="12sp"
            android:gravity="end" />

    </LinearLayout>
</ScrollView>
