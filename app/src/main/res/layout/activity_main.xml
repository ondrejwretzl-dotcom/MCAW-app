<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F1115"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:contentDescription="MCAW logo"
            android:scaleType="fitCenter"
            android:src="@drawable/mcaw_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="MCAW"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- SAFE "alive" indikace – jemná, bez blikání (UI-only) -->
        <ProgressBar
            android:id="@+id/progressAlive"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="10dp"
            android:indeterminate="true" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtBuildInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Build: -"
            android:textColor="#6B7280"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Dominantní alert banner: SAFE / ORANGE / RED (text dle TTS nastavení) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/panelAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/txtAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0B1115"
            android:gravity="center"
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:text="SAFE"
            android:textColor="#FFFFFF"
            android:textSize="52sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Metriky 3x2: sekundární, ale velká čísla -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/panelMetrics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#171A1F"
            android:orientation="vertical"
            android:padding="12dp">

            <GridLayout
                android:id="@+id/gridMetrics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:useDefaultMargins="true">

                <!-- 1) TTC -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="#1E222A"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TTC"
                        android:textColor="#6B7280"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtTtc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="center_horizontal"
                        android:text="--.- s"
                        android:textColor="#C9D1D9"
                        android:textSize="26sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 2) DIST -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="#1E222A"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VZDÁL"
                        android:textColor="#6B7280"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDistance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="center_horizontal"
                        android:text="--.- m"
                        android:textColor="#FFFFFF"
                        android:textSize="26sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 3) RIDER -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="#1E222A"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TY"
                        android:textColor="#6B7280"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtRiderSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="center_horizontal"
                        android:text="--.- km/h"
                        android:textColor="#FFFFFF"
                        android:textSize="26sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 4) REL -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="#1E222A"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REL"
                        android:textColor="#6B7280"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="center_horizontal"
                        android:text="--.- km/h"
                        android:textColor="#FFFFFF"
                        android:textSize="26sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 5) OBJ -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="#1E222A"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OBJ"
                        android:textColor="#6B7280"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtObjectSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="center_horizontal"
                        android:text="--.- km/h"
                        android:textColor="#FFFFFF"
                        android:textSize="26sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 6) LABEL -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="#1E222A"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OBJEKT"
                        android:textColor="#6B7280"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDetectedObject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="center_horizontal"
                        android:text="--"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </GridLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Status line: brzdění + service běží/zastavena + WHY (pouze při alertu) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/panelStatusLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E222A"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/brakeLamp"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/txtBrakeLamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="NEBRZDÍ"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="14dp"
                android:layout_height="1dp" />

            <View
                android:id="@+id/dotService"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZASTAVENA"
                android:textColor="#C9D1D9"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txtWhy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FFB020"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Controls: preview + power + camera/settings stacked on the RIGHT -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/panelControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#171A1F"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/panelMiniPreview"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:visibility="gone"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0B1115">

                    <androidx.camera.view.PreviewView
                        android:id="@+id/previewThumb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_margin="6dp"
                        android:background="#55000000"
                        android:paddingLeft="6dp"
                        android:paddingTop="2dp"
                        android:paddingRight="6dp"
                        android:paddingBottom="2dp"
                        android:text="PREVIEW"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPower"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_power_stopped"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:text="START"
                android:textAllCaps="false"
                android:textColor="#AAB4BE"
                android:textSize="20sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_power"
                app:iconGravity="textTop"
                app:iconPadding="8dp"
                app:iconSize="44dp"
                app:iconTint="#AAB4BE" />

            <LinearLayout
                android:layout_width="68dp"
                android:layout_height="140dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCamera"
                    android:layout_width="68dp"
                    android:layout_height="62dp"
                    android:backgroundTint="#343B49"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:text=""
                    app:cornerRadius="18dp"
                    app:icon="@drawable/ic_camera"
                    app:iconSize="30dp"
                    app:iconTint="#F3F4F6" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSettings"
                    android:layout_width="68dp"
                    android:layout_height="62dp"
                    android:backgroundTint="#343B49"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:text=""
                    app:cornerRadius="18dp"
                    app:icon="@drawable/ic_settings"
                    app:iconSize="30dp"
                    app:iconTint="#F3F4F6" />

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Activities (scrollable) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/panelActivities"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="18dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#14181E"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aktivity:"
                android:textColor="#C9D1D9"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true">

                <TextView
                    android:id="@+id/txtActivityLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="#C9D1D9"
                    android:textSize="13sp" />

            </ScrollView>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom bar: Help + Legal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHelp"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:backgroundTint="#1E222A"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:text="NÁVOD"
            android:textColor="#C9D1D9"
            android:textStyle="bold"
            app:cornerRadius="14dp"
            app:icon="@drawable/ic_help"
            app:iconTint="#C9D1D9" />

        <View
            android:layout_width="12dp"
            android:layout_height="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLegal"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:backgroundTint="#1E222A"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:text="LEGAL"
            android:textColor="#C9D1D9"
            android:textStyle="bold"
            app:cornerRadius="14dp"
            app:icon="@drawable/ic_legal"
            app:iconTint="#C9D1D9" />

    </LinearLayout>

</LinearLayout>
