<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.mcaw.ui.OverlayView
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/txtPreviewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Živý náhled aktivní"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:padding="8dp"
        android:background="#80000000"
        android:layout_gravity="top|start"
        android:layout_margin="12dp" />

    <TextView
        android:id="@+id/txtDetectionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detekce: --"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:padding="8dp"
        android:background="#80000000"
        android:layout_gravity="top|start"
        android:layout_marginStart="12dp"
        android:layout_marginTop="48dp" />

    <!-- ROI edit toggle (click) + reset (long press) -->
    <TextView
        android:id="@+id/btnRoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROI: UPRAVIT"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:padding="8dp"
        android:background="#80AA0000"
        android:layout_gravity="top|end"
        android:layout_margin="12dp" />

    <TextView
        android:id="@+id/txtPreviewBuild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build -"
        android:textColor="#C9D1D9"
        android:textSize="11sp"
        android:padding="6dp"
        android:background="#80000000"
        android:layout_gravity="bottom|end"
        android:layout_margin="12dp" />

</FrameLayout>
