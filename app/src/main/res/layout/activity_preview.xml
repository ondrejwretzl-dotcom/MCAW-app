<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.mcaw.ui.OverlayView
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/txtPreviewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Živý náhled aktivní"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:padding="8dp"
        android:background="#80000000"
        android:layout_gravity="top|start"
        android:layout_margin="12dp" />

    <TextView
        android:id="@+id/txtDetectionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detekce: --"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:padding="8dp"
        android:background="#80000000"
        android:layout_gravity="top|start"
        android:layout_marginStart="12dp"
        android:layout_marginTop="48dp" />

    <TextView
        android:id="@+id/txtActiveProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil: Default"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:padding="8dp"
        android:background="#80000000"
        android:layout_gravity="top|start"
        android:layout_marginStart="12dp"
        android:layout_marginTop="84dp" />


    <!-- ROI edit toggle (click) + reset (long press) -->
    <TextView
        android:id="@+id/btnRoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROI: UPRAVIT"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:padding="8dp"
        android:background="#80AA0000"
        android:layout_gravity="top|end"
        android:layout_margin="12dp" />


    <TextView
        android:id="@+id/btnSaveProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFIL: ULOŽIT"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:padding="8dp"
        android:background="#803B82F6"
        android:layout_gravity="top|end"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="48dp" />


    <TextView
        android:id="@+id/txtPreviewBuild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build -"
        android:textColor="#C9D1D9"
        android:textSize="11sp"
        android:padding="6dp"
        android:background="#80000000"
        android:layout_gravity="bottom|end"
        android:layout_margin="12dp" />


    <!-- Wizard: guide line alignment (hidden in normal preview) -->
    <com.google.android.material.slider.Slider
        android:id="@+id/sliderGuide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="68dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txtWizardHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wizard"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:padding="8dp"
        android:background="#80000000"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="112dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/btnWizardDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOTOVO"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:padding="10dp"
        android:background="#803B82F6"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/btnWizardCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZRUŠIT"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:padding="10dp"
        android:background="#80AA0000"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:visibility="gone"/>

</FrameLayout>
